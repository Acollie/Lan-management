<p id="notice"><%= notice %></p>

<h1>Admin Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_items.each do |admin_item| %>
      <tr>
        <td><%= admin_item.name %></td>
        <td><%= admin_item.price %></td>
        <td><%= link_to 'Show', admin_item %></td>
        <% unless admin_item.lan_ticket %>
          <td><%= link_to 'Edit', edit_admin_item_path(admin_item) %></td>
          <td><%= link_to 'Destroy', admin_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Item', new_admin_item_path %>
