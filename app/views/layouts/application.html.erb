<!DOCTYPE html>
<html>
  <head>
    <title>Lan Website</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mini.css/3.0.1/mini-default.min.css">

  </head>

  <body>
  <header>
    <%= link_to "Lan site",root_path %>

    <% if current_member %>
      <%= link_to 'Profile',profile_index_path,class: 'button' %>
    <% end %>
    <%= link_to 'Lans',lan_index_url,class: 'button' %>
    <%= link_to 'Items',purchasing_index_path,class: 'button' %>
    <% if current_member %>
      <% if current_member.committee %>
        <%= link_to "Admin",admin_path,class: "button" %>
      <% end %>
      <%= link_to "Logout",destroy_member_session_path,method: 'delete',class: "button" %>
    <% end %>

  </header>

  <% flash.each do |key, value| %>
      <div class="card error">
        <%= content_tag :div, value, class: "flash #{key}" %>
      </div>
  <% end %>
    <%= yield %>
  </body>
</html>
